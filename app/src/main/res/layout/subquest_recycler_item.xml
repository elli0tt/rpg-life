<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/quests_list_item_background"
    android:padding="4dp">
    <!--android:background="?android:attr/selectableItemBackground">-->
    <CheckBox
        android:id="@+id/subquest_is_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subquest_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/subquest_is_important_check_box"
        app:layout_constraintStart_toEndOf="@+id/subquest_is_completed"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Read book" />


    <!--Star style for checkBox. It's a bit inconvenient way because I haven't found out how to change -->
    <!--the color of this particular checkbox. I save this line for if I would like to use it later.-->
    <!--style="?android:attr/starStyle"-->
    <CheckBox
        android:id="@+id/subquest_is_important_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:button="@drawable/is_important_checkbox"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/subquest_remove_button"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/subquest_date_due_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:layout_constraintStart_toEndOf="@id/subquest_is_completed"
        app:layout_constraintTop_toBottomOf="@id/subquest_name"
        tools:text="Due: 12.12.2000" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/subquest_repeat_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/subquest_date_due_text_view"
        app:layout_constraintTop_toBottomOf="@id/subquest_name"
        app:srcCompat="@drawable/ic_repeat_black_18dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/subquest_remove_button"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/white"
        app:icon="@drawable/ic_clear_black_24dp"
        app:iconGravity="textStart"
        app:iconTint="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>