<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.elli0tt.rpg_life.presentation.add_edit_quest.AddEditQuestViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/add_edit_quest_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/add_edit_quest_main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="16dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_edit_quest_name_text_input"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/add_quest_name_hint"
                app:errorEnabled="true"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_edit_quest_name_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={viewModel.name}" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_edit_quest_description_text_input"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/add_quest_items_margin_top"
                android:hint="@string/add_quest_description_hint"
                app:errorEnabled="true"
                app:layout_constraintTop_toBottomOf="@id/add_edit_quest_name_text_input">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_edit_quest_description_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={viewModel.description}" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/add_edit_quest_difficulty_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/add_quest_items_margin_top"
                android:text="@string/add_quest_difficulty_text"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/add_edit_quest_description_text_input" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/add_edit_quest_difficulty_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/add_quest_items_margin_top"
                app:layout_constraintStart_toEndOf="@id/add_edit_quest_difficulty_label"
                app:layout_constraintTop_toBottomOf="@id/add_edit_quest_description_text_input"
                app:setSelectedItem="@={viewModel.difficulty}" />

            <com.elli0tt.rpg_life.presentation.custom_view.ButtonWithRemoveIcon
                android:id="@+id/add_edit_quest_add_date_due_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/add_quest_items_margin_top"
                app:icon="@drawable/ic_today_black_24dp"
                app:layout_constraintTop_toBottomOf="@id/add_edit_quest_difficulty_spinner"
                app:text="@string/add_edit_quest_add_date_due" />

            <com.elli0tt.rpg_life.presentation.custom_view.ButtonWithRemoveIcon
                android:id="@+id/add_edit_quest_repeat_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/add_quest_items_margin_top"
                app:icon="@drawable/ic_repeat_black_24dp"
                app:layout_constraintTop_toBottomOf="@id/add_edit_quest_add_date_due_view"
                app:text="@string/add_edit_quest_repeat" />

            <TextView
                android:id="@+id/add_edit_quest_subquests_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/add_quest_items_margin_top"
                android:text="@string/add_edit_quest_subquests"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/add_edit_quest_add_subquest_button" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/add_edit_quest_subquests_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/add_edit_quest_subquests_text_view" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_edit_quest_add_subquest_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/add_quest_items_margin_top"
                android:backgroundTint="@android:color/white"
                android:text="@string/add_edit_quest_add_subquest"
                android:textColor="@android:color/black"
                app:icon="@drawable/ic_plus_black_24dp"
                app:iconTint="@android:color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/add_edit_quest_skills_recycler" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_edit_quest_add_skills_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/add_quest_items_margin_top"
                android:backgroundTint="@android:color/white"
                android:text="@string/add_skill"
                android:textColor="@android:color/black"
                app:icon="@drawable/ic_plus_black_24dp"
                app:iconTint="@android:color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/add_edit_quest_repeat_view" />

            <TextView
                android:id="@+id/add_edit_quest_skills_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/add_quest_items_margin_top"
                android:text="@string/add_edit_quest_skills_label"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/add_edit_quest_add_skills_button" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/add_edit_quest_skills_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/add_edit_quest_skills_text_view" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</layout>